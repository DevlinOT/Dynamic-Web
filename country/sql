CREATE TABLE countries (
    country_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    short_name VARCHAR(50),            -- e.g. "Italy"
    capital_city VARCHAR(100),
    population INT,                    -- replaces stadium_capacity
    flag_colour_primary VARCHAR(20),   -- e.g. "#008C45" or "green"
    flag_colour_secondary VARCHAR(20), -- optional
    continent VARCHAR(50),
    region VARCHAR(100)                -- e.g. "Southern Europe"
);
